<?xml version="1.0" encoding="utf-8" ?>
<Application
    x:Class="WinMediaID.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WinMediaID">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <!--  Other merged dictionaries here  -->
            </ResourceDictionary.MergedDictionaries>
            <!--  Other app resources here  -->
            <Color x:Key="UIStatusBackgroundColor">#5F000000</Color>
            <SolidColorBrush x:Key="UIStatusBackgroundColorBrush" Color="{StaticResource UIStatusBackgroundColor}" />
            <Color x:Key="UIProgressRingBackgroundColor">#5F000000</Color>
            <SolidColorBrush x:Key="UIProgressRingBackgroundColorBrush" Color="{StaticResource UIProgressRingBackgroundColor}" />
            <Color x:Key="UIStatusBoxBackgroundColor">#0C0C0C</Color>
            <SolidColorBrush x:Key="UIStatusBoxBackgroundColorBrush" Color="{StaticResource UIStatusBoxAreaBackgroundColor}" />
            <Color x:Key="UIStatusBoxFontColor">#CCCCCC</Color>
            <SolidColorBrush x:Key="UIStatusBoxFontColorBrush" Color="{StaticResource UIStatusBoxFontColor}" />
        </ResourceDictionary>
    </Application.Resources>
</Application>